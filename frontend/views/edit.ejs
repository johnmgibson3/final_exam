<!DOCTYPE html>
<html>
<head>
  <title>Edit Jedi</title>
  <style>
    form {
      width: 50%;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #F9F9F9;
      font-size: 12px;
    
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #000000;
    }
    input, select, button {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #876565;
      border-radius: 5px;
      
    }
    input[type="checkbox"], input[type="radio"] {
      width: auto;
      margin-right: 5px;
    }
    button {
      background-color: #4CAF50;
      color: rgb(17, 12, 12);
      font-size: 12px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45A049;
    }
  </style>
 <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1 style="text-align: center;">Edit Jedi</h1>
  <form action="/edit/<%= character.id %>" method="POST">
    <!-- Pokémon Description -->
    <label for="fname">First Name</label>
    <input type="text" id="fname" name="first_name" value="<%= character.first_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Base Total -->
    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="last_name" value="<%= character.last_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Date Created -->
    <!-- Active Pokémon (Checkbox) -->
    <label for="jedi">
        Are they a Jedi? <br> Check If Yes
    </label>
      <input type="checkbox" id="jedi" name="jedi" value="true"  <%= character.jedi ? 'checked' : 'true' %>>
      <br>
    
    <!-- Gender (Radio Buttons) -->
    <label>Weapon</label>
    <label>
      <input type="radio" name="weapon" value="L" <%= character.weapon === 'L' ? 'checked' : '' %>> LIGHTSABER
    </label>
    <label>
      <input type="radio" name="weapon" value="B" <%= character.weapon === 'B' ? 'checked' : '' %>> BLASTER
    </label>
    <label>
      <input type="radio" name="weapon" value="N" <%= character.weapon === 'N' ? 'checked' : '' %>> NONE
    </label>
    <!-- Pokémon Type -->
    <label for="planet">Planet</label>
    <select id="planet" name="planet">
        <!-- option is a dropdown -->
         <!-- Uses a .forEach to loop through all -->
      <% planet.forEach(type => { %>
        <option value="<%= type.id %>" <%= character.planet_name === planet.id ? 'selected' : '' %>>
          <%= type.planet_name %>
        </option>
      <% }) %>
    </select>
    <!-- Submit Button -->
    <button type="submit">Save Changes</button>
  </form>
</body>
</html>