<!DOCTYPE html>
<html>
<head>
  <title>Pokemon Records</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1 style="text-align: center;">Pokemon Records</h1>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Pokemon</th>
          <th>Base Total</th>
          <th>Date Created</th>
          <th>Active</th>
          <th>Gender</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (pokemon.length > 0) { %>
          <% pokemon.forEach(row => { %>
            <tr>
              <td><%= row.description %></td>
              <td><%= row.base_total %></td>
              <td><%= new Date(row.date_created).toLocaleDateString('en-US') %></td>
              <td><%= row.active_poke ? 'Yes' : 'No' %></td>
              <td><%= row.gender %></td>
              <td><%= row.poke_type_description %></td>
              <td>
            
                <form action="/edit/<%= row.id %>" method="GET" style="display:inline;">
                  <button class="action-button edit" type="submit">Edit</button>
                </form>
                <form action="/delete/<%= row.id %>" method="POST" style="display:inline;">
                  <button class="action-button delete" type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
                <form action="/view/<%= row.id %>" method="GET" style="display: inline;">
                    <button class="action-button view" type="submit">View</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <form action="/add" method="GET" style="display: flex; justify-content: center; margin: 20px 40px;">
    <button class="action-button add" type="submit">Add</button>
  </form>
</body>
</html>
